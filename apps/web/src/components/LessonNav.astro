---
/**
 * LessonNav - Компонент навигации между уроками (prev/next)
 */

import { t, type Lang } from '@/utils/i18n';

interface Props {
  prev?: {
    slug: string;
    title: string;
  };
  next?: {
    slug: string;
    title: string;
  };
  lang?: Lang;
}

const { prev, next, lang = 'ru' } = Astro.props;
const labels = t(lang).nav;
---

{(prev || next) && (
  <nav class="lesson-nav">
    {prev ? (
      <a href={`/${lang}/${prev.slug}/`} class="lesson-nav-link">
        <span class="lesson-nav-label">{labels.previous}</span>
        <span class="lesson-nav-title">{prev.title}</span>
      </a>
    ) : (
      <div></div>
    )}

    {next ? (
      <a href={`/${lang}/${next.slug}/`} class="lesson-nav-link" style="text-align: right;">
        <span class="lesson-nav-label">{labels.next}</span>
        <span class="lesson-nav-title">{next.title}</span>
      </a>
    ) : (
      <div></div>
    )}
  </nav>
)}
