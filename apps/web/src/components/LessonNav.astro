---
/**
 * LessonNav - Компонент навигации между уроками (prev/next)
 */

interface Props {
  prev?: {
    slug: string;
    title: string;
  };
  next?: {
    slug: string;
    title: string;
  };
}

const { prev, next } = Astro.props;
---

{(prev || next) && (
  <nav class="lesson-nav">
    {prev ? (
      <a href={`/ru/${prev.slug}/`} class="lesson-nav-link">
        <span class="lesson-nav-label">← Предыдущий</span>
        <span class="lesson-nav-title">{prev.title}</span>
      </a>
    ) : (
      <div></div>
    )}

    {next ? (
      <a href={`/ru/${next.slug}/`} class="lesson-nav-link" style="text-align: right;">
        <span class="lesson-nav-label">Следующий →</span>
        <span class="lesson-nav-title">{next.title}</span>
      </a>
    ) : (
      <div></div>
    )}
  </nav>
)}
