---
/**
 * ComingSoon - Placeholder page for locales without content
 * Shows a styled message that content is under development
 */

import { t, type Lang } from '@/utils/i18n';

interface Props {
  lang: Lang;
  alternateUrl?: string;
  alternateLang?: Lang;
}

const { lang, alternateUrl = '/ru/', alternateLang = 'ru' } = Astro.props;
const labels = t(lang);
const alternateLabels = t(alternateLang);
---

<div class="coming-soon">
  <div class="coming-soon-icon">
    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/>
    </svg>
  </div>

  <h1 class="coming-soon-title">
    {lang === 'en' ? 'English Version Coming Soon' : 'Скоро появится'}
  </h1>

  <p class="coming-soon-text">
    {lang === 'en'
      ? 'We are actively working on the English translation of our Go tutorials.'
      : 'Мы активно работаем над переводом наших уроков по Go.'}
  </p>

  <div class="coming-soon-actions">
    <a href={alternateUrl} class="coming-soon-btn coming-soon-btn-primary">
      {lang === 'en'
        ? `View ${alternateLabels.books.goLanguage} (Русский)`
        : `Смотреть ${alternateLabels.books.goLanguage}`}
    </a>

    <a
      href="https://github.com/godojo/godojo"
      target="_blank"
      rel="noopener noreferrer"
      class="coming-soon-btn coming-soon-btn-secondary"
    >
      {lang === 'en' ? 'Contribute on GitHub' : 'Помочь с переводом'}
    </a>
  </div>

  <p class="coming-soon-note">
    {lang === 'en'
      ? 'Want to help? We welcome contributions and translations!'
      : 'Хотите помочь? Мы будем рады вашему участию!'}
  </p>
</div>

<style>
  .coming-soon {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: 60vh;
    padding: 2rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .coming-soon-icon {
    color: var(--sl-color-accent);
    margin-bottom: 1.5rem;
    opacity: 0.8;
  }

  .coming-soon-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--sl-color-white);
    margin: 0 0 1rem 0;
  }

  .coming-soon-text {
    font-size: 1.1rem;
    color: var(--sl-color-gray-3);
    margin: 0 0 2rem 0;
    line-height: 1.6;
  }

  .coming-soon-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 2rem;
  }

  .coming-soon-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    font-size: 0.95rem;
    font-weight: 500;
    text-decoration: none;
    border-radius: 6px;
    transition: all 0.2s ease;
  }

  .coming-soon-btn-primary {
    background: var(--sl-color-accent);
    color: white;
  }

  .coming-soon-btn-primary:hover {
    background: var(--sl-color-accent-high);
    color: var(--sl-color-black);
  }

  .coming-soon-btn-secondary {
    background: var(--sl-color-gray-6);
    color: var(--sl-color-gray-2);
    border: 1px solid var(--sl-color-gray-5);
  }

  .coming-soon-btn-secondary:hover {
    background: var(--sl-color-gray-5);
    color: var(--sl-color-white);
  }

  .coming-soon-note {
    font-size: 0.85rem;
    color: var(--sl-color-gray-4);
    margin: 0;
  }

  @media (max-width: 480px) {
    .coming-soon-title {
      font-size: 1.5rem;
    }

    .coming-soon-text {
      font-size: 1rem;
    }

    .coming-soon-actions {
      flex-direction: column;
      width: 100%;
    }

    .coming-soon-btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>
