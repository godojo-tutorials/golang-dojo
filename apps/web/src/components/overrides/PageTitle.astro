---
/**
 * Custom PageTitle component
 * Adds article meta (author, reading time, date) below the title with full-width border
 */
import type { Props } from '@astrojs/starlight/props';

const { entry, lang } = Astro.props as Props;
const frontmatter = entry.data;

// Get meta from frontmatter (injected by sync script)
const author = frontmatter.author;
const authorName = frontmatter.authorName;
const updatedAt = frontmatter.updatedAt;
const readingTime = frontmatter.readingTime;
const title = frontmatter.title;

// Labels
const readingTimeLabel = lang === 'ru'
  ? `${readingTime} мин чтения`
  : `${readingTime} min read`;
const updatedLabel = lang === 'ru' ? 'Обновлено' : 'Updated';

// Check if this is a content page (not index or authors)
const isArticle = author || updatedAt || readingTime;
---

<h1 id="_top">{title}</h1>

{isArticle && (
  <div class="article-meta-header">
    {author && authorName && (
      <a href={`/${lang}/authors/#${author}`} class="article-author">{authorName}</a>
    )}
    {readingTime && (
      <span class="article-reading-time">{readingTimeLabel}</span>
    )}
    {updatedAt && (
      <span class="article-updated">{updatedLabel}: {updatedAt}</span>
    )}
  </div>
)}

<style>
  h1 {
    margin-top: 1rem;
    font-size: var(--sl-text-h1);
    line-height: var(--sl-line-height-headings);
    font-weight: 600;
    color: var(--sl-color-white);
  }

  .article-meta-header {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem 1rem;
    font-size: 0.85rem;
    color: var(--sl-color-gray-4);
    margin-top: 0.5rem;
    padding-bottom: 1rem;
    margin-bottom: 1rem;
    border-bottom: 1px solid var(--sl-color-gray-6);
  }

  .article-author {
    color: var(--sl-color-accent-high);
    text-decoration: none;
    font-weight: 500;
  }

  .article-author:hover {
    color: var(--sl-color-accent);
    text-decoration: underline;
  }

  .article-reading-time::before,
  .article-updated::before {
    content: '•';
    color: var(--sl-color-gray-5);
    margin-right: 0.5rem;
  }
</style>
